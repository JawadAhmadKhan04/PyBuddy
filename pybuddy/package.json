{
  "name": "pybuddy",
  "displayName": "PyBuddy",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "pybuddy.helloWorld",
      "title": "Hello World"
    },
    {
      "command": "pybuddy.login",
      "title": "Login"
    },
    {
      "command": "pybuddy.logout",
      "title": "Logout"
    },
    {
      "command": "pybuddy.addApiKey",
      "title": "Add API Key",
      "icon": "$(add)"
    },
    {
      "command": "pybuddy.showHints",
      "title": "Hints",
      "icon": "$(light-bulb)"
    }],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pybuddy-sidebar",
          "title": "PyBuddy",
          "icon": "assets/logo1.png"
        }
      ]
    },
    "views": {
      "pybuddy-sidebar": [
        {
          "id": "pybuddy-login",
          "name": "Login",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "editor/title": [
        {
          "command": "pybuddy.showHints",
          "group": "navigation@1"
        }
      ],
      "view/title": [
        {
          "command": "pybuddy.login",
          "when": "!pybuddyLoggedIn && view == pybuddy-login",
          "group": "navigation"
        },
        {
          "command": "pybuddy.addApiKey",
          "when": "view == pybuddy-login",
          "group": "navigation"
        },
        {
          "command": "pybuddy.logout",
          "when": "pybuddyLoggedIn && view == pybuddy-login",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
